<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jaegokeeper.hwan.stock.mapper.LogMapper">

<!--    재고조정시 히스토리 삽입-->
    <insert id="insertLog">
        INSERT INTO log (
                         item_id,
                         log_type,
                         log_amount,
                         created_at
        )
        VALUES (
                #{itemId},
                #{logType},
                #{amount},
                CURRENT_TIMESTAMP
               )
    </insert>

</mapper>