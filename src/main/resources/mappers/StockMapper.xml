<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jaegokeeper.hwan.mapper.StockMapper">

    <insert id="insertStock"
            parameterType="com.jaegokeeper.hwan.domain.Stock"
            useGeneratedKeys="true"
            keyProperty="stockId">

        insert into stock(
                          item_id,
                          store_id,
                          quantity,
                          favorite_yn
        )
        values (
                #{itemId},
                #{storeId},
                #{quantity},
                0

               )
    </insert>
</mapper>