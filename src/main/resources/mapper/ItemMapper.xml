<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jaegokeeper.psj.mapper.ItemMapper">

    <!-- 아이템 저장 -->
    <insert id="insertItem" parameterType="com.jaegokeeper.psj.dto.ItemDto">
        INSERT INTO item (store_id, item_name)
        VALUES (#{storeId}, #{itemName})
    </insert>
    <!-- 아이템 이름 중복 체크 -->
    <select id="existsByName" parameterType="com.jaegokeeper.psj.dto.ItemDto">
        SELECT COUNT(*) > 0
        FROM item
        WHERE item_name = #{itemName}
    </select>
    <!-- 아이템 조회 -->
    <select id="selectItemById" parameterType="com.jaegokeeper.psj.dto.ItemDto">
        SELECT item_id AS itemId,
                store_id AS storeId,
                item_name AS itemName
        FROM item
        WHERE item_id = #{itemId}
    </select>
    <!-- 전체 아이템 조회 -->
    <select id="selectAllItems" resultType="com.jaegokeeper.psj.dto.ItemDto">
        SELECT item_id AS itemId,
        store_id AS storeId,
        item_name AS itemName
        FROM item
    </select>
</mapper>