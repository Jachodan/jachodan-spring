    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.mariadb.jdbc.Driver"/>
<!--        <property name="url" value="jdbc:mariadb://jaegokeeper.ddns.net:3142/jacho"/>-->
<!--        <property name="url" value="jdbc:mariadb://192.168.0.6:3306/jacho"/>-->
        <property name="url" value="jdbc:mariadb://127.0.0.1:3306/jacho"/>
        <property name="username" value="ddando"/>
        <property name="password" value="bopomofo"/>
    </bean>

  
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="mapperLocations" value="classpath*:mappers/**/*.xml"/>
        <property name="typeAliasesPackage" value="com.jaegokeeper.hwan.domain"/>
    </bean>

    <!-- JdbcTemplate 등록 -->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
<!--        <property name="mapperLocations" value="classpath:/mapper/*.xml"/>-->
<!--        <property name="typeAliasesPackage" value="com.jaegokeeper.psj.entity"/>-->
    </bean>

    <!-- hwan 패키지 Mapper 스캔 -->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.jaegokeeper.hwan"/>
        <property name="annotationClass" value="org.apache.ibatis.annotations.Mapper"/>
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"/>
    </bean>

    <!-- psj 패키지 Mapper 스캔 -->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.jaegokeeper.psj.mapper"/>
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"/>
    </bean>

    <!-- ddan 패키지 img Mapper 스캔 -->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.jaegokeeper.ddan.img.mapper"/>
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"/>
    </bean>


    <!-- Transaction Manager -->
    <bean id="transactionManager"
          class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <!-- Enable @Transactional -->
    <tx:annotation-driven transaction-manager="transactionManager"/>

    <!-- board 패키지 Mapper 스캔 -->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.jaegokeeper.board.mapper"/>
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"/>
    </bean>

    <!-- auth mapper 스캔 -->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.jaegokeeper.auth.mapper"/>
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"/>
        <property name="annotationClass" value="org.apache.ibatis.annotations.Mapper"/>
    </bean>
    <!-- user mapper 스캔 -->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.jaegokeeper.user.mapper"/>
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"/>
        <property name="annotationClass" value="org.apache.ibatis.annotations.Mapper"/>
    </bean>


    <!-- mail properties -->
    <context:property-placeholder location="classpath:mail.properties" />

    <!-- JavaMailSender -->
    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="${mail.host}"/>
        <property name="port" value="${mail.port}"/>
        <property name="username" value="${mail.username}"/>
        <property name="password" value="${mail.password}"/>

        <property name="javaMailProperties">
            <props>
                <prop key="mail.smtp.auth">${mail.smtp.auth}</prop>
                <prop key="mail.smtp.starttls.enable">${mail.smtp.starttls.enable}</prop>
                <prop key="mail.smtp.starttls.required">${mail.smtp.starttls.required}</prop>
                <prop key="mail.smtp.connectiontimeout">${mail.smtp.connectiontimeout}</prop>
                <prop key="mail.smtp.timeout">${mail.smtp.timeout}</prop>
                <prop key="mail.smtp.writetimeout">${mail.smtp.writetimeout}</prop>
            </props>
        </property>
    </bean>

</beans>
